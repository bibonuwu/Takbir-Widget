<Window x:Class="Takbir_Widget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Takbir Widget" Height="100" Width="525"
        AllowsTransparency="True" WindowStyle="None" Foreground="{x:Null}" Background="{x:Null}" Icon="/63.ico">
    <Border BorderThickness="1" CornerRadius="20,0,0,20" Background="#FF102A2B">
        <Grid>
            <TextBlock x:Name="ContentLabel" TextWrapping="Wrap" Foreground="White" VerticalAlignment="Center" FontSize="24" Margin="20,0,120,0" FontFamily="Cascadia Mono Light">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect><Run Text="Allahu Akbar"/></TextBlock>
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Right">
                <Label x:Name="CounterLabel" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="24" FontStyle="Italic" Background="Transparent" Opacity="0.4" Margin="20,0,0,0">0</Label>
                <Image Source="pack://application:,,,/63.png" Margin="0,20,30,20" />

            </StackPanel>
        </Grid>









    </Border>
</Window>
